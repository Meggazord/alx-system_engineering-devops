#!/usr/bin/env bash
# Bash script to configure Nginx server with a custom 404 page

# Update package repository
sudo apt update

# Install Nginx
sudo apt install nginx -y

# Create a custom 404 error page containing the string "Ceci n'est pas une page"
sudo sh -c 'echo "Ceci n'\''est pas une page" > /var/www/html/404.html'

# Update Nginx configuration to use the custom 404 page
sudo sed -i '/server_name _;/a \\t\terror_page 404 /404.html;' /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo service nginx restart
